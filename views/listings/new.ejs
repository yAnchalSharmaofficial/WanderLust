<% layout('/layouts/boilerplate') %>       

  <div class="row">
    <div class="col-8 offset-2 mt-3" >
    <h3>Create New Listing</h3>    
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter a catchy title" type="text" class="form-control" required></input>
            <div class="invalid-feedback">please enter a valid title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">please enter a short description </div>
        </div>
        
        
        <div class="mb-3">
            <label for="image" class="form-label"> Upload Image</label>
            <input name="listing[image]" placeholder="Enter image URL/link" type="file" class="form-control" required></input>      
        </div>

        <div class="row">
           <div class="mb-3 col-md-4">
               <label for="price" class="form-label">Price</label>
               <input name="listing[price]" placeholder="1200" type="text" class="form-control" required></input>
               <div class="invalid-feedback">please enter a valid price</div>
           </div>   
        
           <div class="mb-3 col-md-8">
               <label for="country" class="form-label">Country</label>
               <input name="listing[country]" placeholder="India" type="text"class="form-control" required></input>
               <div class="invalid-feedback">please enter a valid Country name</div>
           </div>
        </div>   

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="New Delhi" type="text" class="form-control" required></input>
            <div class="invalid-feedback">please enter a valid loaction name</div>
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3 mb-3">Save</button>
                                 
    </form>
   </div>  
  </div>
